---
import type { CollectionEntry } from 'astro:content';

interface Props {
  author: CollectionEntry<'authors'>;
}

const { author } = Astro.props;
---

<div style="border: 1px solid var(--color-border); border-radius: 0.5rem; padding: 1.5rem; background-color: var(--color-bg-alt); margin: 2rem 0;">
  <div style="display: flex; gap: 1.5rem; align-items: start;">
    <div style="flex-shrink: 0;">
      <img
        src={author.data.avatar}
        alt={author.data.name}
        style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover; background-color: var(--color-border);"
        onerror="this.style.display='none'"
      />
    </div>

    <div style="flex-grow: 1;">
      <h3 style="margin-bottom: 0.5rem;">{author.data.name}</h3>
      <p style="color: var(--color-text-light); margin-bottom: 1rem;">
        {author.data.bio}
      </p>

      <div style="display: flex; flex-wrap: wrap; gap: 1rem; font-size: 0.9rem;">
        {author.data.email && (
          <a href={`mailto:${author.data.email}`} style="display: flex; align-items: center; gap: 0.25rem;">
            Email
          </a>
        )}
        {author.data.github && (
          <a href={author.data.github} target="_blank" rel="noopener noreferrer" style="display: flex; align-items: center; gap: 0.25rem;">
            GitHub
          </a>
        )}
        {author.data.linkedin && (
          <a href={author.data.linkedin} target="_blank" rel="noopener noreferrer" style="display: flex; align-items: center; gap: 0.25rem;">
            LinkedIn
          </a>
        )}
        {author.data.website && (
          <a href={author.data.website} target="_blank" rel="noopener noreferrer" style="display: flex; align-items: center; gap: 0.25rem;">
            Website
          </a>
        )}
      </div>
    </div>
  </div>
</div>
