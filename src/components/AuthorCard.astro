---
import type { CollectionEntry } from 'astro:content';

interface Props {
  author: CollectionEntry<'authors'>;
}

const { author } = Astro.props;
---

<div class="rounded-lg p-4 sm:p-6 my-6 sm:my-8" style="background-color: var(--color-bg-alt); border: 1px solid var(--color-border);">
  <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-start">
    <div class="flex-shrink-0 mx-auto sm:mx-0">
      <img
        src={author.data.avatar}
        alt={author.data.name}
        class="w-20 h-20 sm:w-24 sm:h-24 rounded-full object-cover"
        style="background-color: var(--color-border);"
        onerror="this.style.display='none'"
      />
    </div>

    <div class="flex-grow text-center sm:text-left">
      <h3 class="text-xl sm:text-2xl font-bold mb-2" style="color: var(--color-text);">{author.data.name}</h3>
      <p class="mb-4 leading-relaxed" style="color: var(--color-text-light);">
        {author.data.bio}
      </p>

      <div class="flex flex-wrap justify-center sm:justify-start gap-3 sm:gap-4 text-sm">
        {author.data.email && (
          <a
            href={`mailto:${author.data.email}`}
            class="inline-flex items-center gap-1 no-underline hover:underline hover:opacity-80 transition-opacity"
            style="color: var(--color-primary);"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email
          </a>
        )}
        {author.data.github && (
          <a
            href={author.data.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 no-underline hover:underline hover:opacity-80 transition-opacity"
            style="color: var(--color-primary);"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        )}
        {author.data.linkedin && (
          <a
            href={author.data.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 no-underline hover:underline hover:opacity-80 transition-opacity"
            style="color: var(--color-primary);"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            LinkedIn
          </a>
        )}
        {author.data.website && (
          <a
            href={author.data.website}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 no-underline hover:underline hover:opacity-80 transition-opacity"
            style="color: var(--color-primary);"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            Website
          </a>
        )}
      </div>
    </div>
  </div>
</div>
