---
import type { CollectionEntry } from 'astro:content';
import { getEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const author = await getEntry(post.data.author);
const formattedDate = new Date(post.data.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="rounded-lg p-4 sm:p-6 mb-4 sm:mb-6 hover:shadow-lg transition-shadow duration-200" style="background-color: var(--color-bg); border: 1px solid var(--color-border);">
  <a href={`/blog/${post.slug}`} class="no-underline group">
    <h2 class="text-xl sm:text-2xl font-bold mb-2 leading-tight hover:opacity-80 transition-opacity" style="color: var(--color-primary);">
      {post.data.title}
    </h2>
  </a>

  <div class="flex flex-wrap gap-2 sm:gap-4 mb-3 text-sm sm:text-base" style="color: var(--color-text-light);">
    <time datetime={post.data.pubDate.toISOString()} class="flex items-center">
      {formattedDate}
    </time>
    <span class="hidden sm:inline">•</span>
    <span class="flex items-center">by <a href={`/authors/${post.data.author.id}`} class="no-underline hover:underline transition-opacity hover:opacity-80 ml-1" style="color: var(--color-primary);">{author.data.name}</a></span>
    <span class="hidden sm:inline">•</span>
    <span class="flex items-center font-medium" style="color: var(--color-text);">{post.data.category}</span>
  </div>

  <p class="mb-4 leading-relaxed" style="color: var(--color-text);">
    {post.data.description}
  </p>

  <div class="flex flex-wrap gap-2 mb-4">
    {post.data.tags.map(tag => (
      <a
        href={`/tags/${tag}`}
        class="px-3 py-1 rounded-full text-xs sm:text-sm no-underline transition-colors hover:opacity-80"
        style="background-color: var(--color-bg-alt); color: var(--color-text); border: 1px solid var(--color-border);"
      >
        #{tag}
      </a>
    ))}
  </div>

  <a href={`/blog/${post.slug}`} class="inline-flex items-center font-medium no-underline group hover:opacity-80 transition-opacity" style="color: var(--color-primary);">
    Read more
    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </a>
</article>
