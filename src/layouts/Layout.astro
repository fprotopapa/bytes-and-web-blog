---
import '../styles/global.css';
import Search from '../components/Search.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A blog about embedded Linux, kernel development, and build systems" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Embedded Linux Blog RSS Feed" href="/rss.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-800 font-sans leading-relaxed">
    <header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <!-- Logo - Mobile & Desktop -->
          <a href="/" class="text-xl sm:text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors no-underline">
            Embedded Linux Blog
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors no-underline">Home</a>
            <a href="/blog" class="text-gray-700 hover:text-blue-600 transition-colors no-underline">Blog</a>
            <a href="/tags" class="text-gray-700 hover:text-blue-600 transition-colors no-underline">Tags</a>
            <a href="/categories" class="text-gray-700 hover:text-blue-600 transition-colors no-underline">Categories</a>
            <a href="/rss.xml" title="RSS Feed" class="text-gray-700 hover:text-blue-600 transition-colors no-underline">
              RSS
            </a>
            <button
              id="search-toggle"
              class="p-2 rounded-lg hover:bg-gray-100 transition-colors"
              aria-label="Toggle search"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
          </div>

          <!-- Mobile Buttons -->
          <div class="md:hidden flex items-center gap-2">
            <button
              id="search-toggle-mobile"
              class="p-2 rounded-lg hover:bg-gray-100 transition-colors"
              aria-label="Toggle search"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
            <button
              id="mobile-menu-btn"
              class="p-2 rounded-lg hover:bg-gray-100 transition-colors"
              aria-label="Toggle menu"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Search Modal -->
        <div id="search-modal" class="hidden py-4 border-t border-gray-200">
          <div class="max-w-2xl mx-auto">
            <Search />
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-2">
          <a href="/" class="block py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded px-3 transition-colors no-underline">Home</a>
          <a href="/blog" class="block py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded px-3 transition-colors no-underline">Blog</a>
          <a href="/tags" class="block py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded px-3 transition-colors no-underline">Tags</a>
          <a href="/categories" class="block py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded px-3 transition-colors no-underline">Categories</a>
          <a href="/rss.xml" class="block py-2 text-gray-700 hover:text-blue-600 hover:bg-gray-50 rounded px-3 transition-colors no-underline">RSS</a>
        </div>
      </nav>
    </header>

    <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
      <slot />
    </main>

    <footer class="bg-gray-50 border-t border-gray-200 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} Embedded Linux Blog. All rights reserved.</p>
        <p class="mt-2 text-sm">
          Built with <a href="https://astro.build" class="text-blue-600 hover:text-blue-700 hover:underline">Astro</a> &
          <a href="https://tailwindcss.com" class="text-blue-600 hover:text-blue-700 hover:underline ml-1">Tailwind CSS</a>
        </p>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Search modal toggle
      const searchToggle = document.getElementById('search-toggle');
      const searchToggleMobile = document.getElementById('search-toggle-mobile');
      const searchModal = document.getElementById('search-modal');

      const toggleSearch = () => {
        searchModal?.classList.toggle('hidden');
      };

      searchToggle?.addEventListener('click', toggleSearch);
      searchToggleMobile?.addEventListener('click', toggleSearch);
    </script>
  </body>
</html>
