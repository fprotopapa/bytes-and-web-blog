---
import '../styles/global.css';
import Search from '../components/Search.astro';
import ConsentBanner from '../components/ConsentBanner.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { useTranslations } from '../i18n/utils';
import { defaultLang, type Lang, getLocalizedPath } from '../i18n/config';
import { siteConfig } from '../config/site';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
  translationUrls?: Record<Lang, string>;
  canonicalUrl?: string;
  // SEO / Social sharing
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  lang = defaultLang,
  translationUrls,
  canonicalUrl,
  image,
  imageAlt,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  tags,
} = Astro.props;
const t = useTranslations(lang);
const description = Astro.props.description || t('site.description');

// Determine canonical URL - use provided one or generate from current URL
const siteUrl = siteConfig.site.url.replace(/\/$/, '');
const defaultCanonical = `${siteUrl}${Astro.url.pathname}`;
const canonical = canonicalUrl || defaultCanonical;

// Social sharing image
const ogImage = image
  ? (image.startsWith('http') ? image : `${siteUrl}${image}`)
  : `${siteUrl}${siteConfig.site.defaultImage}`;
const ogImageAlt = imageAlt || siteConfig.site.defaultImageAlt;

// Locale for Open Graph
const ogLocale = lang === 'pl' ? 'pl_PL' : 'en_US';
const ogLocaleAlternate = lang === 'pl' ? 'en_US' : 'pl_PL';

// Helper to get language-aware URLs
const localePath = (path: string) => getLocalizedPath(path, lang);
const htmlLang = lang === 'pl' ? 'pl' : 'en';
---

<!doctype html>
<html lang={htmlLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title={t('footer.rssFeed')} href={localePath('/rss.xml')} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />

    <!-- Hreflang tags for SEO -->
    <link rel="alternate" hreflang="pl" href={translationUrls?.pl || getLocalizedPath(Astro.url.pathname, 'pl')} />
    <link rel="alternate" hreflang="en" href={translationUrls?.en || getLocalizedPath(Astro.url.pathname, 'en')} />
    <link rel="alternate" hreflang="x-default" href={translationUrls?.pl || getLocalizedPath(Astro.url.pathname, 'pl')} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:site_name" content={siteConfig.site.name} />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:locale:alternate" content={ogLocaleAlternate} />
    {type === 'article' && publishedTime && (
      <meta property="article:published_time" content={publishedTime} />
    )}
    {type === 'article' && modifiedTime && (
      <meta property="article:modified_time" content={modifiedTime} />
    )}
    {type === 'article' && author && (
      <meta property="article:author" content={author} />
    )}
    {type === 'article' && tags && tags.map(tag => (
      <meta property="article:tag" content={tag} />
    ))}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    {siteConfig.social.twitter && (
      <meta name="twitter:site" content={siteConfig.social.twitter} />
    )}

  </head>
  <body class="min-h-screen flex flex-col font-sans leading-relaxed">
    <header class="sticky top-0 z-50 border-b shadow-sm" style="background-color: var(--color-bg); border-color: var(--color-border);">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <!-- Logo - Mobile & Desktop -->
          <a href={localePath('/')} class="text-xl sm:text-2xl font-bold hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text);">
            {t('site.title')}
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a href={localePath('/')} class="hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text-light);">{t('nav.home')}</a>
            <a href={localePath('/blog')} class="hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text-light);">{t('nav.blog')}</a>
            {siteConfig.enableCourses && <a href={localePath('/courses')} class="hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text-light);">{t('nav.courses')}</a>}
            <a href={localePath('/tags')} class="hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text-light);">{t('nav.tags')}</a>
            <a href={localePath('/categories')} class="hover:text-blue-600 transition-colors no-underline" style="color: var(--color-text-light);">{t('nav.categories')}</a>
            {siteConfig.enableLanguageSwitcher && <LanguageSwitcher lang={lang} translationUrls={translationUrls} />}
            <button
              id="search-toggle"
              class="p-2 rounded-lg transition-colors"
              style="color: var(--color-text-light);"
              aria-label={t('nav.toggleSearch')}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
            <button
              id="theme-toggle"
              class="p-2 rounded-lg transition-colors"
              style="color: var(--color-text-light);"
              aria-label={t('nav.toggleDarkMode')}
            >
              <svg id="theme-toggle-dark-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
              <svg id="theme-toggle-light-icon" class="w-5 h-5 hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>

          <!-- Mobile Buttons -->
          <div class="md:hidden flex items-center gap-2">
            <button
              id="search-toggle-mobile"
              class="p-2 rounded-lg transition-colors"
              style="color: var(--color-text-light);"
              aria-label={t('nav.toggleSearch')}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>
            <button
              id="theme-toggle-mobile"
              class="p-2 rounded-lg transition-colors"
              style="color: var(--color-text-light);"
              aria-label={t('nav.toggleDarkMode')}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path id="theme-icon-mobile" d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>
            <button
              id="mobile-menu-btn"
              class="p-2 rounded-lg transition-colors"
              style="color: var(--color-text-light);"
              aria-label={t('nav.toggleMenu')}
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Search Modal -->
        <div id="search-modal" class="hidden py-4 border-t" style="border-color: var(--color-border);">
          <div class="max-w-2xl mx-auto">
            <Search />
          </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 space-y-2">
          <a href={localePath('/')} class="block py-2 rounded px-3 transition-colors no-underline hover:opacity-80" style="color: var(--color-text); background-color: transparent;">{t('nav.home')}</a>
          <a href={localePath('/blog')} class="block py-2 rounded px-3 transition-colors no-underline hover:opacity-80" style="color: var(--color-text); background-color: transparent;">{t('nav.blog')}</a>
          {siteConfig.enableCourses && <a href={localePath('/courses')} class="block py-2 rounded px-3 transition-colors no-underline hover:opacity-80" style="color: var(--color-text); background-color: transparent;">{t('nav.courses')}</a>}
          <a href={localePath('/tags')} class="block py-2 rounded px-3 transition-colors no-underline hover:opacity-80" style="color: var(--color-text); background-color: transparent;">{t('nav.tags')}</a>
          <a href={localePath('/categories')} class="block py-2 rounded px-3 transition-colors no-underline hover:opacity-80" style="color: var(--color-text); background-color: transparent;">{t('nav.categories')}</a>
          {siteConfig.enableLanguageSwitcher && (
            <div class="px-3 pt-2">
              <LanguageSwitcher lang={lang} translationUrls={translationUrls} />
            </div>
          )}
        </div>
      </nav>
    </header>

    <main class="flex-1 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
      <slot />
    </main>

    <footer class="border-t mt-16" style="background-color: var(--color-bg-alt); border-color: var(--color-border);">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center" style="color: var(--color-text-light);">
        <p>&copy; {new Date().getFullYear()} {t('site.title')}. All rights reserved.</p>
        <div class="mt-4 flex justify-center gap-4 text-sm">
          <a href={localePath('/privacy')} class="hover:text-[var(--color-primary)] transition-colors no-underline" style="color: var(--color-text-light);">
            {t('footer.privacyPolicy')}
          </a>
          <span style="color: var(--color-border);">|</span>
          <button
            id="cookie-settings-btn"
            class="hover:text-[var(--color-primary)] transition-colors"
            style="color: var(--color-text-light); background: none; border: none; cursor: pointer;"
          >
            {t('footer.cookieSettings')}
          </button>
        </div>
      </div>
    </footer>

    <!-- GDPR Consent Banner -->
    <ConsentBanner lang={lang} />

    <script is:inline>
      // Theme switching logic (must run before page renders)
      // Check if preferences consent is given
      const hasPreferencesConsent = () => {
        try {
          const consent = localStorage.getItem('gdpr-consent');
          if (!consent) return false;
          const parsed = JSON.parse(consent);
          return parsed.preferences === true;
        } catch {
          return false;
        }
      };

      const getTheme = () => {
        // Only read saved theme if preferences consent is given
        if (typeof localStorage !== 'undefined' && hasPreferencesConsent() && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      };

      const theme = getTheme();
      if (theme === 'dark') {
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.setAttribute('data-theme', 'light');
      }
    </script>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Search modal toggle
      const searchToggle = document.getElementById('search-toggle');
      const searchToggleMobile = document.getElementById('search-toggle-mobile');
      const searchModal = document.getElementById('search-modal');

      const toggleSearch = () => {
        searchModal?.classList.toggle('hidden');
      };

      searchToggle?.addEventListener('click', toggleSearch);
      searchToggleMobile?.addEventListener('click', toggleSearch);

      // Dark mode toggle
      const themeToggle = document.getElementById('theme-toggle');
      const themeToggleMobile = document.getElementById('theme-toggle-mobile');
      const darkIcon = document.getElementById('theme-toggle-dark-icon');
      const lightIcon = document.getElementById('theme-toggle-light-icon');

      const updateThemeIcons = (theme) => {
        if (theme === 'dark') {
          darkIcon?.classList.remove('hidden');
          lightIcon?.classList.add('hidden');
        } else {
          darkIcon?.classList.add('hidden');
          lightIcon?.classList.remove('hidden');
        }
      };

      // Initialize icons based on current theme
      const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
      updateThemeIcons(currentTheme);

      // Check if preferences consent is given
      const checkPreferencesConsent = () => {
        try {
          const consent = localStorage.getItem('gdpr-consent');
          if (!consent) return false;
          const parsed = JSON.parse(consent);
          return parsed.preferences === true;
        } catch {
          return false;
        }
      };

      const toggleTheme = () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        document.documentElement.setAttribute('data-theme', newTheme);
        // Only save to localStorage if preferences consent is given
        if (checkPreferencesConsent()) {
          localStorage.setItem('theme', newTheme);
        }
        updateThemeIcons(newTheme);
      };

      themeToggle?.addEventListener('click', toggleTheme);
      themeToggleMobile?.addEventListener('click', toggleTheme);

      // Cookie settings button
      const cookieSettingsBtn = document.getElementById('cookie-settings-btn');
      cookieSettingsBtn?.addEventListener('click', () => {
        window.dispatchEvent(new CustomEvent('open-consent-banner'));
      });
    </script>

    <script>
      import { hasConsent, getConsent } from '../utils/consent';

      function initUmamiAnalytics() {
        const UMAMI_SCRIPT_ID = 'umami-analytics-script';
        const UMAMI_SRC = 'https://prov.tuxownia.pl/script.js';
        const UMAMI_WEBSITE_ID = '7232141e-12a9-4924-80c3-93b87fa334d0';

        // Prevent duplicate loading
        if (document.getElementById(UMAMI_SCRIPT_ID)) {
          return;
        }

        // Load only if analytics consent granted
        if (hasConsent('analytics')) {
          const script = document.createElement('script');
          script.id = UMAMI_SCRIPT_ID;
          script.src = UMAMI_SRC;
          script.setAttribute('data-website-id', UMAMI_WEBSITE_ID);
          script.defer = true;
          document.head.appendChild(script);
        }
      }

      function handleConsentChange() {
        const consent = getConsent();

        if (consent?.analytics) {
          initUmamiAnalytics();
        } else {
          // Remove script and cleanup on consent revocation
          const existingScript = document.getElementById('umami-analytics-script');
          if (existingScript) {
            existingScript.remove();
          }
          if (typeof window !== 'undefined' && (window as any).umami) {
            delete (window as any).umami;
          }
        }
      }

      // Initialize on page load and transitions
      document.addEventListener('DOMContentLoaded', initUmamiAnalytics);
      document.addEventListener('astro:page-load', initUmamiAnalytics);

      // React to consent changes
      window.addEventListener('consent-updated', handleConsentChange);
    </script>
  </body>
</html>
