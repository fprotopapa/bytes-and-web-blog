---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from '../i18n/utils';
import { getLangFromUrl } from '../i18n/config';

// Try to detect language from URL, default to Polish
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = lang === 'pl' ? 'Strona nie znaleziona' : 'Page Not Found';
const description = lang === 'pl'
  ? 'Przepraszamy, strona której szukasz nie istnieje.'
  : 'Sorry, the page you are looking for does not exist.';
---

<Layout title={`404 - ${title}`} description={description} lang={lang}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <!-- 404 Number -->
    <h1 class="text-8xl sm:text-9xl font-bold mb-4" style="color: var(--color-primary); opacity: 0.3;">
      404
    </h1>

    <!-- Title -->
    <h2 class="text-2xl sm:text-3xl font-bold mb-4" style="color: var(--color-text);">
      {title}
    </h2>

    <!-- Description -->
    <p class="text-lg mb-8 max-w-md" style="color: var(--color-text-light);">
      {description}
    </p>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
      <!-- Go Back Button -->
      <button
        onclick="history.back()"
        class="px-6 py-3 rounded-lg font-medium transition-all hover:scale-105 hover:shadow-md flex items-center gap-2"
        style="background-color: var(--color-bg-alt); color: var(--color-text); border: 1px solid var(--color-border);"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        {lang === 'pl' ? 'Wróć' : 'Go Back'}
      </button>

      <!-- Home Button -->
      <a
        href={lang === 'pl' ? '/' : '/en/'}
        class="px-6 py-3 rounded-lg font-medium transition-all hover:scale-105 hover:shadow-md flex items-center gap-2 no-underline"
        style="background-color: var(--color-primary); color: white;"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        {t('nav.home')}
      </a>

      <!-- Browse Blog Button -->
      <a
        href={lang === 'pl' ? '/blog' : '/en/blog'}
        class="px-6 py-3 rounded-lg font-medium transition-all hover:scale-105 hover:shadow-md flex items-center gap-2 no-underline"
        style="background-color: var(--color-bg-alt); color: var(--color-text); border: 1px solid var(--color-border);"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
        </svg>
        {t('nav.blog')}
      </a>
    </div>

    <!-- Helpful Links -->
    <div class="mt-12 pt-8 border-t w-full max-w-md" style="border-color: var(--color-border);">
      <p class="text-sm mb-4" style="color: var(--color-text-light);">
        {lang === 'pl' ? 'Możesz też spróbować:' : 'You might also try:'}
      </p>
      <div class="flex flex-wrap justify-center gap-4 text-sm">
        <a
          href={lang === 'pl' ? '/tags' : '/en/tags'}
          class="hover:underline"
          style="color: var(--color-primary);"
        >
          {t('nav.tags')}
        </a>
        <span style="color: var(--color-border);">•</span>
        <a
          href={lang === 'pl' ? '/categories' : '/en/categories'}
          class="hover:underline"
          style="color: var(--color-primary);"
        >
          {t('nav.categories')}
        </a>
      </div>
    </div>
  </div>
</Layout>
